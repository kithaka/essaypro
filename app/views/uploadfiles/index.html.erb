<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<%= link_to "New upload", new_uploadfile_path, class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Download Link</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @uploadfiles.each do |uploadfile| %>
      <tr>
        <td><%= uploadfile.name %></td>
        <td><%= link_to "Download file", uploadfile.attachment_url %></td>
        <td><%= button_to "Delete",  uploadfile, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{uploadfile.name}?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

